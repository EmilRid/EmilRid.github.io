---
import Layout from "../layouts/Layout.astro";

const posts = Object.values(import.meta.glob('./projects/*.md', { eager: true }));
posts.sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));
---

<Layout>
	<h2>Projects:</h2>
  <ul>
		{posts.map(post => 
			<li><a href={post.url}>{post.frontmatter.date + " - " + post.frontmatter.title}</a></li>
		)}
	</ul>
</Layout>
<style>
h2 {
	text-align: center;
}
ul {
list-style: none;
}
</style>
